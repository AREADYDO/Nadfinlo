<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nsz.Nadfinlo.Main2Activity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="632dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView

                        android:id="@+id/imageView2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/t002_01"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="402dp"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="left|center"
                        android:orientation="horizontal"
                        android:paddingTop="20dp"

                        android:paddingRight="200dp"
                        android:paddingBottom="10dp">


                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="151dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_margin="0dp"
                            android:drawableLeft="@drawable/gongneng"
                            android:gravity="left|center"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"

                            android:paddingRight="11dp"
                            android:paddingBottom="10dp"
                            android:text="    应用功能" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    >

                    <ImageView

                        android:id="@+id/imageView3"
                        android:layout_width="78dp"
                        android:layout_height="105dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:gravity="top|center"
                        android:paddingLeft="25dp"
                        android:paddingTop="10dp"
                        android:paddingRight="11dp"
                        android:paddingBottom="10dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/t002_03" />

                    <ImageView

                        android:id="@+id/imageView9"
                        android:layout_width="63dp"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:gravity="top|center"
                        android:paddingLeft="11dp"
                        android:paddingTop="10dp"
                        android:paddingRight="11dp"
                        android:paddingBottom="45dp"

                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/t002_04" />

                    <ImageView

                        android:id="@+id/imageView10"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:gravity="top|center"
                        android:paddingLeft="11dp"
                        android:paddingTop="10dp"
                        android:paddingRight="11dp"
                        android:paddingBottom="45dp"

                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/t002_05" />

                    <ImageView

                        android:id="@+id/imageView11"
                        android:layout_width="83dp"
                        android:layout_height="123dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:gravity="top|center"
                        android:paddingLeft="11dp"
                        android:paddingTop="15dp"
                        android:paddingRight="26dp"
                        android:paddingBottom="50dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/t002_06" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tv"
                    android:launchMode="singleTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:text="Button" />

            </LinearLayout>


            <!-- 33333333333333333333333333333333333 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <ImageView

                    android:id="@+id/imageView4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/t002_12" />

                <ImageView

                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/t002_13" />

                <ImageView

                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/t002_14" />

                <ImageView

                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView7"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/t002_15" />

                <ImageView

                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/t002_16" />
            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>