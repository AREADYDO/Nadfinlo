<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nsz.Nadfinlo.MainActivity">

    <include layout="@layout/toolbar_main" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spinnerzs"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:layout_margin="5dip"
            android:text="选择扫描地点:" />



        <Spinner
            android:id="@+id/spinner"
            android:layout_width="294dp"
            android:layout_height="33dp"
            android:layout_margin="5dip"
            android:entries="@array/spingarr"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:text="开始扫码" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_resultzs"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:layout_margin="5dip"
            android:text="扫描结果:" />

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="294dp"
            android:layout_height="33dp"
            android:layout_margin="5dip"
            android:text="NULL" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/assume_resultzs"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:layout_margin="5dip"
            android:text="匹配结果为：" />

        <TextView
            android:id="@+id/assume_result"
            android:layout_width="295dp"
            android:layout_height="33dp"
            android:layout_margin="5dip"
            android:text="NULL" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/sitezs"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:layout_margin="5dip"
            android:text="扫描地点：" />

        <TextView
            android:id="@+id/site"
            android:layout_width="295dp"
            android:layout_height="33dp"
            android:layout_margin="5dip"
            android:text="NULL" />

    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="20dip"
        android:background="@color/colorPrimary" />


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="测试sql连接" />

    <TextView
        android:id="@+id/subresult"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Null" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交" />

    <ListView
        android:id="@+id/province_list"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:hint="请输入二维码内容"
            android:visibility="invisible"
            android:lines="2" />

        <Button
            android:id="@+id/btn_generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="6dip"
            android:visibility="invisible"
            android:text="生成二维码" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_qrcode"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>


</LinearLayout>